<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="77dp"
        android:layout_height="22dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/newPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="120dp"
        android:onClick="openActivity2"
        android:text="Next Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonChangeNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="72dp"
        android:onClick="changeToNo"
        android:text="No"
        app:layout_constraintBottom_toTopOf="@+id/newPage"
        app:layout_constraintEnd_toStartOf="@+id/YesOrNo" />

    <Button
        android:id="@+id/buttonChangeYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="72dp"
        android:onClick="changeToYes"
        android:text="Yes"
        app:layout_constraintBottom_toTopOf="@+id/newPage"
        app:layout_constraintStart_toEndOf="@+id/YesOrNo" />

    <TextView
        android:id="@+id/YesOrNo"
        android:layout_width="72dp"
        android:layout_height="33dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toTopOf="@+id/newPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>